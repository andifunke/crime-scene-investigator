<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.DatePicker?>

<fx:root type="javafx.scene.control.SplitPane" xmlns:fx="http://javafx.com/fxml">
    <SplitPane dividerPositions="0.25" orientation="VERTICAL">
        <items>
            <TableView fx:id="Table"
                       editable="true">
                <columns>
                    <TableColumn fx:id="ColumnFallID"
                                 text="Fall ID"
                                 prefWidth="70.0" minWidth="-1.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="fallID" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="ColumnName"
                                 text="Name"
                                 prefWidth="410.0" minWidth="-1.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="ColumnEroeffnungsdatum"
                                 text="eröffnet"
                                 prefWidth="150.0" minWidth="-1.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="eroeffnungsdatum" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="ColumnEnddatum"
                                 text="geschlossen"
                                 prefWidth="150.0" minWidth="-1.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="enddatum" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <!--							<sortOrder>
                                                <fx:reference source="ColumnFallID"/>
                                            </sortOrder>-->
            </TableView>
            <VBox>
                <children>
                    <ToolBar prefHeight="40.0" minHeight="-Infinity" maxHeight="-Infinity"
                             nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="NEVER">
                        <items>
                            <Button id="ButtonDefault"
                                    text="Neu..."
                                    onAction="#neu"
                                    prefWidth="80.0" minWidth="-Infinity" maxWidth="-Infinity"
                                    prefHeight="25.0" minHeight="-Infinity" maxHeight="-Infinity"
                                    mnemonicParsing="false" />
                            <Button id="ButtonDefault"
                                    text="Speichern..."
                                    onAction="#save"
                                    prefWidth="80.0" minWidth="-Infinity" maxWidth="-Infinity"
                                    prefHeight="25.0" minHeight="-Infinity" maxHeight="-Infinity"
                                    mnemonicParsing="false" />
                            <Button id="ButtonDefault"
                                    text="Löschen..."
                                    onAction="#delete"
                                    prefWidth="80.0" minWidth="-Infinity" maxWidth="-Infinity"
                                    prefHeight="25.0" minHeight="-Infinity" maxHeight="-Infinity"
                                    mnemonicParsing="false" />
                        </items>
                    </ToolBar>
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" vbarPolicy="ALWAYS">
                        <content>
                            <GridPane id="EditorGrid"
                                      minWidth="400.0"
                                      alignment="CENTER">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="92.0" minWidth="-Infinity" maxWidth="-Infinity"
                                                       halignment="RIGHT" hgrow="NEVER" fillWidth="false" />
                                    <ColumnConstraints prefWidth="550.0" minWidth="10.0"
                                                       halignment="LEFT" hgrow="SOMETIMES" />
                                    <ColumnConstraints prefWidth="150.0" minWidth="-Infinity" maxWidth="-Infinity"
                                                       halignment="CENTER" hgrow="NEVER" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                                    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                                    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                                    <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                                    <RowConstraints vgrow="NEVER" />
                                </rowConstraints>
                                <children>

                                    <!-- Zeile 0 -->
                                    <Label id="LabelFilter"
                                           text="Filter"
                                           alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER"
                                           GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                    <!-- Zeile 1 -->
                                    <Label id="LabelAttribute"
                                           text="ID"
                                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextField id="TextFieldAttribute"
                                               fx:id="TextFallID"
                                               GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterFallID"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                    <!-- Zeile 2 -->
                                    <Label id="LabelAttribute"
                                           text="Name"
                                           GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <TextField id="TextFieldAttribute"
                                               fx:id="TextName"
                                               GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterName"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="2" />

                                    <!-- Zeile 3 -->
                                    <Label id="LabelAttribute"
                                           text="eröffnet"
                                           GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <DatePicker id="DatePickerAttribute"
                                                fx:id="TextEroeffnungsdatum"
                                                GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterEroeffnungsdatum"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="3" />

                                    <!-- Zeile 4 -->
                                    <Label id="LabelAttribute"
                                           text="geschlossen"
                                           GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <DatePicker id="DatePickerAttribute"
                                                fx:id="TextEnddatum"
                                                GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterEnddatum"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="4" />

                                    <!-- Zeile 5 -->
                                    <Label id="LabelAttribute"
                                           text="Verbrechen"
                                           GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                    <VBox id="VBoxAttribute"
                                          GridPane.columnIndex="1" GridPane.rowIndex="5">
                                        <children>
                                            <ListView id="ListViewAttribute"
                                                      fx:id="ListVerbrechen"
                                                      prefHeight="90.0" minHeight="20.0" />
                                            <HBox id="HBoxForButtons">
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonGoToVerbrechen"
                                                        text="anzeigen"
                                                        onAction="#goToForeign"
                                                        mnemonicParsing="false" />
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonAddVerbrechen"
                                                        text="hinzufügen"
                                                        onAction="#addForeign"
                                                        mnemonicParsing="false" />
                                            </HBox>
                                        </children>
                                    </VBox>
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterVerbrechen"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="5" />

                                    <!-- Zeile 6 -->
                                    <Label id="LabelAttribute"
                                           text="Notizen"
                                           GridPane.columnIndex="0" GridPane.rowIndex="6" />
                                    <VBox id="VBoxAttribute"
                                          GridPane.columnIndex="1" GridPane.rowIndex="6">
                                        <children>
                                            <ListView id="ListViewAttribute"
                                                      fx:id="ListNotizen"
                                                      prefHeight="90.0" minHeight="20.0" />
                                            <HBox id="HBoxForButtons">
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonGoToNotizen"
                                                        text="anzeigen"
                                                        onAction="#goToForeign"
                                                        mnemonicParsing="false" />
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonAddNotizen"
                                                        text="hinzufügen"
                                                        onAction="#addForeign"
                                                        mnemonicParsing="false" />
                                            </HBox>
                                        </children>
                                    </VBox>
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterNotizen"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="6" />

                                    <!-- Zeile 7 -->
                                    <Label id="LabelAttribute"
                                           text="Indizien"
                                           GridPane.columnIndex="0" GridPane.rowIndex="7" />
                                    <VBox id="VBoxAttribute"
                                          GridPane.columnIndex="1" GridPane.rowIndex="7">
                                        <children>
                                            <ListView id="ListViewAttribute"
                                                      fx:id="ListIndizien"
                                                      prefHeight="90.0" minHeight="20.0" />
                                            <HBox id="HBoxForButtons">
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonGoToIndizien"
                                                        text="anzeigen"
                                                        onAction="#goToForeign"
                                                        mnemonicParsing="false" />
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonAddIndizien"
                                                        text="hinzufügen"
                                                        onAction="#addForeign"
                                                        mnemonicParsing="false" />
                                            </HBox>
                                        </children>
                                    </VBox>
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterIndizien"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="7" />

                                    <!-- Zeile 8 -->
                                    <Label id="LabelAttribute" text="Polizisten"
                                           GridPane.columnIndex="0" GridPane.rowIndex="8" />
                                    <VBox id="VBoxAttribute"
                                          GridPane.columnIndex="1" GridPane.rowIndex="8">
                                        <children>
                                            <ListView id="ListViewAttribute"
                                                      fx:id="ListPolizisten"
                                                      prefHeight="90.0" minHeight="20.0" />
                                            <HBox id="HBoxForButtons">
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonGoToPolizisten"
                                                        text="anzeigen"
                                                        onAction="#goToForeign"
                                                        mnemonicParsing="false" />
                                                <Button id="ButtonHinzufuegen"
                                                        fx:id="ButtonAddPolizisten"
                                                        text="hinzufügen"
                                                        onAction="#addForeign"
                                                        mnemonicParsing="false" />
                                            </HBox>
                                        </children>
                                    </VBox>
                                    <TextField id="TextFieldFilter"
                                               fx:id="FilterPolizisten"
                                               onAction="#filter"
                                               GridPane.columnIndex="2" GridPane.rowIndex="8" />

                                    <!-- Zeile 9 -->
                                    <HBox id="HBoxForButtons"
                                          nodeOrientation="RIGHT_TO_LEFT"
                                          GridPane.columnIndex="1" GridPane.rowIndex="9">
                                        <Button id="ButtonHinzufuegen"
                                                text="Fall schließen"
                                                onAction="#FallSchliessen"
                                                mnemonicParsing="false" />
                                    </HBox>
                                </children>
                            </GridPane>
                        </content>
                    </ScrollPane>
                    <!-- Status Line -->
                </children>
            </VBox>
        </items>
    </SplitPane>
</fx:root>